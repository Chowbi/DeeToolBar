{
  "manifest_version": 2,
  "name": "DeeToolbar",
  "version": "1.0",  
  
  "description": "Adds a browser action icon to the toolbar to take control of deezer tab. ",

  "icons":{
	"48" : "Content/play.png"
  },
  
  "content_scripts":[{
	"matches":["*.deezer.com/*"],
	"js":[
		"content_scripts/actions.js",
		"content_scripts/jquery-2.1.4.min.js",
		"content_scripts/jquery-simulator.js",
		"content_scripts/jquery-ui.min.js"
	]
  }],

  "applications": {
    "gecko": {
      "id": "deetoolbar@mozilla.org"
    }
  },

  "permissions": [
    "http://www.deezer.com/*",
    "https://www.deezer.com/*",
    "tabs",
    "commands"
  ],  

  "browser_action": {
    "default_icon": "Content/deezer-icon.png",
    "default_title": "DeeToolbar",
    "default_popup": "Popup/DeeCtrl.html"
  },
  "commands": {
          "MediaPrevTrack": {
            "suggested_key": {
              "default": "MediaPrevTrack"
            }
          },
          "MediaNextTrack": {
            "suggested_key": {
              "default": "MediaNextTrack"
            }
          },
          "MediaPlayPause": {
            "suggested_key": {
              "default": "MediaPlayPause"
            }
          },
          "MediaStop": {
            "suggested_key": {
              "default": "MediaStop"
            }
          }
        }
}




